@using TranslationRobot
@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
<table>
    <tr>
        <th>
            Input
        </th>
        <th>
            Translation
        </th>
    </tr>
    @foreach (TranslatedAddressEntity item in ViewBag.Addresses)
    {
        <tr>
            <td >@item.RowKey</td>
            <td >@item.Translation</td>
        </tr>
    }
</table>

<h4>Provide a better translation:</h4>
@using TranslationRobot
@model TranslationRobot.TranslationInput

@using (Html.BeginForm("ProvideTranslation", "Home", FormMethod.Post))
{
    @Html.TextBoxFor(t => t.Input, new { @Value = "" })
    @Html.TextBoxFor(t => t.Translation)

    <input type="submit" value="Submit" />
}